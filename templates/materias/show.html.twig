{% extends 'base.html.twig' %}

{% block title %}Materias{% endblock %}

{% block body %}
<div class = "container p-4">
    <h1>Materias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ materia.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ materia.nombre }}</td>
            </tr>
        </tbody>
    </table>
    <table>
        <a href="{{ path('app_materias_index') }}"><button type="button" class="btn btn-primary">Volver a la Lista</button></a>

        <a href="{{ path('app_materias_edit', {'id': materia.id}) }}"><button style="background-color:purple" type="button" class="btn btn-primary">Editar</button></a>
            
        {{ include('materias/_delete_form.html.twig') }}
    </table>
</div>
{% endblock %}
